<Window x:Class="Crazy_Zoo.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Crazy_Zoo"
        mc:Ignorable="d"
        Title="Bacteria clicker" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/images.jpg"/>
        </Grid.Background>
        <Button x:Name="Multiply_button" Content="Button" HorizontalAlignment="Center" Height="46" Margin="0,289,0,0" VerticalAlignment="Top" Width="248" Click="On_Multiply_button_press"/>
        <Button x:Name="More_button" Content="Button" HorizontalAlignment="Center" Height="46" Margin="0,340,0,0" VerticalAlignment="Top" Width="248" Click="On_More_button_press"/>
        <Rectangle HorizontalAlignment="Center" Height="163" Margin="0,121,0,0" Stroke="Black" VerticalAlignment="Top" Width="248">
            <Rectangle.Fill>
                <ImageBrush ImageSource="/Без названия.jpg"/>
            </Rectangle.Fill>
        </Rectangle>
        <TextBlock x:Name="Info_block"  HorizontalAlignment="Center" Height="61" Margin="0,55,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="248" FontSize="20" TextAlignment="Center" FontFamily="Arial Rounded MT Bold"/>
        <TextBlock x:Name="Info_block_Copy"  HorizontalAlignment="Center" Height="28" Margin="0,22,0,0" TextWrapping="Wrap" Text="{DynamicResource BacteriaRaisYourColony}" VerticalAlignment="Top" Width="248" FontSize="20" TextAlignment="Center" FontFamily="Arial Rounded MT Bold"/>

    </Grid>
</Window>
