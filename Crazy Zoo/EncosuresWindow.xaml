<Window x:Class="Crazy_Zoo.EncosuresWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Crazy_Zoo"
        mc:Ignorable="d"
        Title="EncosuresWindow" Height="450" Width="800" MinWidth="800" MinHeight="450" MaxHeight="450" MaxWidth="800">
    <Grid>
        <ListBox Name="Enclosure_listbox" HorizontalAlignment="Left" Height="270" Margin="29,93,0,0" VerticalAlignment="Top" Width="229" SelectionChanged="On_Enclosure_listbox_change"/>
        <ListBox Name="EncAnimals_listbox" HorizontalAlignment="Left" Height="270" Margin="263,93,0,0" VerticalAlignment="Top" Width="179"/>
        <TextBox x:Name="EncName_textbox" HorizontalAlignment="Left" Height="19" Margin="29,366,0,0" TextWrapping="Wrap" Text="Enter name here..." VerticalAlignment="Top" Width="128" GotFocus="on_EncName_textbox_focus" LostFocus="on_EncName_textbox_focusLost"/>
        <Button x:Name="Add_Enclosure_Btn" Content="Add Enclosure" HorizontalAlignment="Left" Height="19" Margin="162,366,0,0" VerticalAlignment="Top" Width="96" Click="On_Add_Enclosure_Btn_press"/>
        <TextBlock HorizontalAlignment="Left" Height="17" Margin="29,71,0,0" TextWrapping="Wrap" Text="Current enclosures" VerticalAlignment="Top" Width="229" TextAlignment="Center"/>
        <TextBlock HorizontalAlignment="Left" Height="17" Margin="263,71,0,0" TextWrapping="Wrap" Text="Enclosured animals" VerticalAlignment="Top" Width="179" TextAlignment="Center"/>
        <Button x:Name="AddAnimal_btn" Content="Add animal" HorizontalAlignment="Left" Height="19" Margin="365,366,0,0" VerticalAlignment="Top" Width="77" Click="On_AddAnimal_btn_click"/>
        <Button x:Name="RemoveAnimal_btn" Content="Remove animal" HorizontalAlignment="Left" Height="19" Margin="263,390,0,0" VerticalAlignment="Top" Width="179" Click="on_RemoveAnimal_btn_click"/>
        <Button x:Name="RemoveEnclosure_btn" Content="Remove Enclosure" HorizontalAlignment="Left" Height="19" Margin="31,390,0,0" VerticalAlignment="Top" Width="227" Click="on_RemoveEnclosure_btn_click"/>
        <Button x:Name="EnterEnclosure_btn" Content="Enter enclosure" HorizontalAlignment="Left" Height="19" Margin="263,366,0,0" VerticalAlignment="Top" Width="97" Click="on_EnterEnclosure_btn_press"/>
        <TextBlock HorizontalAlignment="Left" Height="17" Margin="524,71,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="178" TextAlignment="Center"><Run Text="Statistics"/><LineBreak/><Run/></TextBlock>
        <Grid HorizontalAlignment="Left" Height="135" Margin="452,93,0,0" VerticalAlignment="Top" Width="318">
            <Rectangle HorizontalAlignment="Center" Height="135" Stroke="#FFABADB3" VerticalAlignment="Center" Width="318"/>
            <TextBlock HorizontalAlignment="Left" Height="18" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" TextAlignment="Center"><Run Text="Amout of animals:"/><LineBreak/><Run/></TextBlock>
            <TextBlock HorizontalAlignment="Left" Height="18" Margin="10,42,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" TextAlignment="Center"><Run Text="Unique animals:"/><LineBreak/><Run/></TextBlock>
            <TextBlock x:Name="AmounOfAnimals_textblock" HorizontalAlignment="Left" Height="16" Margin="115,13,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="21"/>
            <TextBlock x:Name="UniqueAnimals_textblock" HorizontalAlignment="Left" Height="16" Margin="115,42,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="21"/>
            <TextBlock HorizontalAlignment="Left" Height="18" Margin="10,74,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" TextAlignment="Center"><Run Text="Crazy animals:"/><LineBreak/><Run/></TextBlock>
            <TextBlock x:Name="___No_Name_" HorizontalAlignment="Left" Height="18" Margin="10,106,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" Text="Babys amount:" TextAlignment="Center"/>
            <TextBlock x:Name="CrazyAnimals_textblock" HorizontalAlignment="Left" Height="16" Margin="115,74,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="21"/>
            <TextBlock x:Name="BabyAmount_textblock" HorizontalAlignment="Left" Height="16" Margin="115,106,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="21"/>
            <TextBlock HorizontalAlignment="Left" Height="18" Margin="150,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="149" TextAlignment="Center" Text="Average age by animal"/>
            <ListBox x:Name="AnimalAge_listbox" HorizontalAlignment="Left" Height="92" Margin="141,33,0,0" VerticalAlignment="Top" Width="167"/>
        </Grid>
        <TextBlock HorizontalAlignment="Center" Height="56" Margin="0,10,0,0" TextWrapping="Wrap" Text="Welcom to: CRAZY ZOO!" VerticalAlignment="Top" Width="740" FontSize="35" FontWeight="Bold" TextAlignment="Center"/>
        <Border BorderBrush="#FFABADB3" BorderThickness="1" HorizontalAlignment="Left" Height="22" Margin="452,233,0,0" VerticalAlignment="Top" Width="77"/>
        <Border BorderBrush="#FFABADB3" BorderThickness="1" HorizontalAlignment="Left" Height="22" Margin="536,233,0,0" VerticalAlignment="Top" Width="234"/>
        <TextBlock HorizontalAlignment="Left" Height="20" Margin="456,234,0,0" TextWrapping="Wrap" Text="Time:" VerticalAlignment="Top" Width="30"/>
        <TextBlock x:Name="Time_textbox" HorizontalAlignment="Left" Height="20" Margin="492,234,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="32" Text="12:00"/>
        <TextBlock x:Name="___No_Name__Copy" HorizontalAlignment="Left" Height="18" Margin="536,235,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="234" Text="Opened from 11:00 to 01:00" TextAlignment="Center"/>
        <Border BorderBrush="#FFABADB3" BorderThickness="1" HorizontalAlignment="Left" Height="103" Margin="452,260,0,0" VerticalAlignment="Top" Width="318"/>
        <ListBox x:Name="Dial_textbox" HorizontalAlignment="Left" Height="116" Margin="452,260,0,0" VerticalAlignment="Top" Width="318"/>


    </Grid>
</Window>
